<h1>振替を編集</h1>

<%= form_for :account_exchange, url:user_account_exchange_path(params[:user_id], params[:id]), method: :PUT do |f| %>
  <div class="">
    <%= f.label :date, "日付を選択してください" %>
  </div>
  <div class="">
    <%= f.date_select :date, selected: @account_exchange.date %>
  </div>

  <div class="">
    <%= f.label :bname, "振替もとアカウントを選択してください" %>
  </div>
  <div class="">
    <%= f.select :bname, @bnames %>
  </div>

  <div class="">
    <%= f.label :aname, "振替先アカウントを入力してください" %>
  </div>
  <div class="">
    <%= f.select :aname, @anames %>
  </div>
  <div class="">
    <%= f.label :value, "振替金額を入力してください" %>
  </div>
  <div class="">
    <%= f.text_field :value, value: @account_exchange.value %>
  </div>
  <div class="">
    <%= f.submit "振替を編集する" %>
  </div>
<% end %>
<div class="">
  <%= link_to "振替履歴一覧へ戻る", user_account_exchanges_path %>
</div>
