<h1>振替履歴一覧</h1>

<div class="table_contents row">
  <div class="table-responsive col-xs-12 col-sm-8 col-sm-offset-2">
    <table class="table" id="account_exchanges">
      <thead>
        <tr>
          <th>日付</th>
          <th>振替元アカウント</th>
          <th>振替先アカウント</th>
          <th>金額</th>
          <th>引き落とし日</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <% @account_exchanges.each do |account_exchange| %>
      <tbody>
        <tr>
          <td><%= account_exchange.date.year %>/<%= account_exchange.date.month %>/<%= account_exchange.date.day %></td>
          <td><%= account_exchange.bname %></td>
          <td><%= account_exchange.aname %></td>
          <td>¥<%= account_exchange.value.to_s(:delimited) %></td>
          <% if account_exchange.pay_date %>
          <td><%= account_exchange.pay_date.year %>/<%= account_exchange.pay_date.month %>/<%= account_exchange.pay_date.day %></td>
          <% else %>
          <td></td>
          <% end %>
          <td><%= link_to "削除", user_account_exchange_path(params[:user_id], account_exchange.id), method: :DELETE, data: {confirm: "削除してよろしいですか？", "turbolinks" => false} %></td>
          <td><%= link_to "編集", edit_user_account_exchange_path(params[:user_id], account_exchange.id) %></td>
        </tr>
      </tbody>
      <% end %>
      <%= will_paginate @account_exchanges %>
    </table>
  </div>
</div>
