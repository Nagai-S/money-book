<h2>パスワードを変更する</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<div class="form_wrapper">
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="row">
    <div class="<%= @form_class %>">
      <%= f.label :password, "新しいパスワードを入力してください" %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", id: "user" %>
    </div>
  </div>

  <div class="row">
    <div class="<%= @form_class %>">
      <%= f.label :password_confirmation, "もう一度入力してください" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "user" %>
    </div>
  </div>

  <%= f.submit "パスワード変更", class: "btn btn-primary", role: "button" %>
  <%= render "devise/shared/links" %>
</div>

<% end %>
