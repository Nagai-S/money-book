<h2>登録情報変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="form-group col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "user" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>現在次のアドレスの認証を待っています <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
    <div class="form-group col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
      <%= f.label :password %> <i>(変更しない場合は空欄にしてください)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "user" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "user" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
      <%= f.label :current_password, "現在のパスワードを入力してください" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", id: "user" %>
    </div>
  </div>


    <%= f.submit "変更", class: "btn btn-primary", role: "button" %>

<% end %>

