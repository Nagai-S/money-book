<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, "メールアドレスを入力してください" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "user" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワードを入力してください" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "user" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <%= f.submit "ログイン", class: "btn btn-primary", role: "button" %>

<% end %>

<%= render "devise/shared/links" %>
