<h1>新規ジャンル作成</h1>
<%= form_for :genre, url:user_genres_path do |f| %>

  <div class="form-group">
    <%= f.label :iae, "収入か支出か選択してください" %>
    <%= f.select :iae, [["支出",false],["収入",true]], {}, class: "form-control", id: "select" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "名前を入力してください" %>
    <%= f.text_field :name, class: "form-control", id: "name" %>
  </div>

  <%= f.submit "ジャンル作成", class: "btn btn-primary", role: "button" %>

<% end %>

<ul class="nav-list">
  <li class="nav-list-item">
    <%= link_to "ジャンル一覧へ戻る", user_genres_path(params[:user_id]), data: {"turbolinks" => false} %>
  </li>
</ul>
